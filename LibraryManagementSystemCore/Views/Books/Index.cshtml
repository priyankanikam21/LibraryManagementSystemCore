@model IEnumerable<LibraryManagementSystemCore.Models.Book>

@{
    ViewData["Title"] = "Books List";
}

<h2>Books</h2>

<a class="btn btn-primary mb-2" href="/Books/Create">Add New Book</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>ISBN</th>
            <th>Published Date</th>
            <th>Category</th>
            <th>Copies Available</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.ISBN</td>
                <td>@book.PublishedDate.ToShortDateString()</td>
                <td>@book.Category</td>
                <td>@book.CopiesAvailable</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Books/Details/@book.Id">View</a>
                    <a class="btn btn-warning btn-sm" href="/Books/Edit/@book.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Books/Delete/@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


