@model LibraryManagementSystemCore.Models.Book

@{
    ViewData["Title"] = "Edit Book";
}

<style>
    .card-light-theme {
        background-color: #fefefe;
        border-radius: 16px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    }

    .card-header-light {
        background: linear-gradient(to right, #e0f7fa, #b2ebf2);
        color: #004d40;
        border-bottom: 1px solid #ccc;
        border-radius: 16px 16px 0 0;
    }

    .btn-light-success {
        background-color: #c8e6c9;
        color: #2e7d32;
        border: none;
    }

        .btn-light-success:hover {
            background-color: #a5d6a7;
            color: #1b5e20;
        }

    .btn-outline-light {
        border-color: #004d40;
        color: #004d40;
    }

        .btn-outline-light:hover {
            background-color: #b2dfdb;
            color: #004d40;
        }

    label.form-label {
        color: #555;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card card-light-theme">
                <div class="card-header card-header-light d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Edit Book</h4>
                    <a asp-action="Index" class="btn btn-outline-light btn-sm">Back to List</a>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Author" class="form-label fw-semibold"></label>
                            <input asp-for="Author" class="form-control" />
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ISBN" class="form-label fw-semibold"></label>
                            <input asp-for="ISBN" class="form-control" />
                            <span asp-validation-for="ISBN" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PublishedDate" class="form-label fw-semibold"></label>
                            <input asp-for="PublishedDate" class="form-control" type="date" />
                            <span asp-validation-for="PublishedDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label fw-semibold"></label>
                            <input asp-for="Category" class="form-control" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CopiesAvailable" class="form-label fw-semibold"></label>
                            <input asp-for="CopiesAvailable" class="form-control" type="number" />
                            <span asp-validation-for="CopiesAvailable" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-light-success">
                                <i class="bi bi-save me-1"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
